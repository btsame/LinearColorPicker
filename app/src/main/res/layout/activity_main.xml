<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cy.yangbo.linearcolorpicker.demo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="30sp"
            android:text="Hello World!" />
        
        <com.cy.yangbo.linearcolorpicker.LinearColorPickerView
            android:id="@+id/lcpv_h"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:selectedColor="green"
            app:showCursor="true"
            app:cursorColor="@android:color/white"
            app:showBorder="true"
            app:borderWidth="1dp"
            app:borderColor="@android:color/black"
            app:isVertical="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_v"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="30sp"
            android:text="Hello World!" />

        <com.cy.yangbo.linearcolorpicker.LinearColorPickerView
            android:id="@+id/lcpv_v"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:selectedColor="red"
            app:showCursor="true"
            app:cursorColor="@android:color/black"
            app:showBorder="true"
            app:borderWidth="1dp"
            app:borderColor="@android:color/black"
            app:isVertical="true"/>

    </LinearLayout>

</LinearLayout>
